#!/bin/sh

############
## System ##
############
pkill sxhkd
sxhkd &

pkill picom
picom &

pkill dunst
dunst &

numlockx &

pkill -f /usr/lib/xfce-polkit/xfce-polkit
/usr/lib/xfce-polkit/xfce-polkit &

pkill $HOME/.config/dunst/Low-battery-notify
$HOME/.config/dunst/Low-battery-notify &

nitrogen --set-scaled $HOME/Pictures/darkDear.jpg &

pkill openvpn
alacritty -e sudo openvpn --auth-nocache --config $HOME/ProtonVPN\ Config/openvpnConfig.ovpn --auth-user-pass $HOME/ProtonVPN\ Config/userlogin.txt &

#########
## Bar ##
#########
pkill polybar
polybar &

#anytype &

#pkill blueman-applet
#blueman-applet &

pkill greenclip
greenclip daemon &

pkill -f optimus-manager-qt
optimus-manager-qt &

pkill Discord
discord --start-minimized &
